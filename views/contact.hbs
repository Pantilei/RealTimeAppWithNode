<h1 class="text-center">Contact Us</h1>


<form class="col-md-6 offset-md-3" method="post">
    {{#each errorMessages}}
    <div class="alert alert-danger">{{this.msg}}</div>
    {{/each}}
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="Name" name="name" value={{name}}>
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" name="email" value={{email}}>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" rows="3" name="message">{{message}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>